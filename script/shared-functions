#!/usr/bin/env bash
#
# To use, add to script
#
# DIR=$( dirname "$(readlink -f "$0")" )
# . $DIR/shared-functions
set -e
set -u
set -o pipefail

init-shared-functions() {
    DIR=$( dirname "$(readlink -f "$0")" )

    # Load up initial configuration
    source $DIR/lib/config

    # Bash Helpers
    source $DIR/lib/helpers/string-helpers
    source $DIR/lib/helpers/file-helpers
    source $DIR/lib/helpers/logging-helpers

    # OS Helpers
    source $DIR/lib/helpers/os-helpers
    source $DIR/lib/helpers/debian-helpers
    source $DIR/lib/helpers/redhat-helpers

    # Tool Helpers
    source $DIR/lib/helpers/rsync-helpers
    source $DIR/lib/helpers/puppet-helpers
    source $DIR/lib/helpers/git-helpers

    # Language Helpers
    source $DIR/lib/helpers/bash-helpers
    source $DIR/lib/helpers/ruby-helpers

    # Project Helpers
    source $DIR/lib/helpers/project-helpers
    source $DIR/lib/helpers/help-helpers

    # Set the path to include local binaries for AIO
    export PATH="$(project-root)/bin:$PATH"
}

init-shared-functions
