[Unit]
Description=StackStorm service <% @st2_process -%>
After=network.target

[Service]
Type=simple
User=st2
Group=st2
Environment="DAEMON_ARGS=--config-file /etc/st2/st2.conf"
EnvironmentFile=-/etc/sysconfig/<%- @st2_process -%>
ExecStart=/usr/share/python/st2actions/bin/<%- @st2_process %> $DAEMON_ARGS
TimeoutSec=60
PrivateTmp=true
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target